{
  "name": "cardsgame",
  "private": true,
  "main": "index.js",
  "author": "Darek Greenly (https://darekgreenly.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zielak/cardsGame.git"
  },
  "bugs": {
    "url": "https://github.com/zielak/cardsGame/issues"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "linkup": "scripts/linkup.sh",
    "linkup:colyseus": "scripts/linkupColyseus.sh",
    "test": "jest --config config/jest.config.js --silent --maxWorkers=75%",
    "test:ci": "jest --config config/jest.config.js --silent --ci --maxWorkers=1 --coverage --coverageReporters=lcovonly",
    "coveralls": "coveralls < coverage/lcov.info",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "lerna run build",
    "build:server": "lerna run --stream --concurrency 1 --scope '*/server' build",
    "build:server-w": "lerna run --stream --concurrency 1 --scope '*/server' build:watch",
    "build:client": "lerna run --stream --concurrency 1 --scope '*/client' build",
    "build:client-w": "lerna run --stream --concurrency 1 --scope '*/client' build:watch",
    "build:utils": "lerna run --stream --concurrency 1 --scope '*/utils' build",
    "build:utils-w": "lerna run --stream --concurrency 1 --scope '*/utils' build:watch",
    "build:entityTraits": "lerna run --stream --concurrency 1 --scope '*/entity-traits' build",
    "prepare": "husky install",
    "prerelease:ci": "lerna version --yes",
    "release:ci": "lerna publish from-git --no-verify-access",
    "postrelease:ci": "git rebase main development && git push origin development --no-verify && git checkout main"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^25.3.0",
    "git-cz": "^4.7.6",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^12.0.0",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}

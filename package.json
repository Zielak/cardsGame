{
  "name": "cardsgame",
  "private": true,
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "bootstrap": "lerna exec --concurrency 1 npm install && lerna bootstrap",
    "linkup": "scripts/linkup.sh",
    "start": "npm run build:examples:server-w | npm run build:examples:client-w",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch",
    "test:cover": "jest --silent --coverage",
    "test:backup": "jest -c=packages/server/jest.config.js",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,html,scss,md}\"",
    "build:server": "lerna run --stream --concurrency 1 --scope '*/server' build",
    "build:server-w": "lerna run --stream --concurrency 1 --scope '*/server' build:watch",
    "build:client": "lerna run --stream --concurrency 1 --scope '*/client' build",
    "build:client-w": "lerna run --stream --concurrency 1 --scope '*/client' build:watch",
    "build:utils": "lerna run --stream --concurrency 1 --scope '*/utils' build",
    "build:utils-w": "lerna run --stream --concurrency 1 --scope '*/utils' build:watch",
    "preversion": "npm ci && npm run test",
    "ci:publish": "lerna publish from-git --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,html,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "chalk": "^2.4.2",
    "css-loader": "^3.2.0",
    "eventemitter3": "^4.0.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "sass": "^1.22.12",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "webpack-plugin-typescript-declaration-bundler": "^1.0.4"
  },
  "dependencies": {}
}

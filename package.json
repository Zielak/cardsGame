{
  "name": "cardsgame",
  "private": true,
  "type": "module",
  "author": "Darek Greenly (https://darekgreenly.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zielak/cardsGame.git"
  },
  "bugs": {
    "url": "https://github.com/zielak/cardsGame/issues"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "linkup": "scripts/linkup.sh",
    "linkup:colyseus": "scripts/linkupColyseus.sh",
    "test": "jest --config config/jest.config.cjs --silent --maxWorkers=75%",
    "test:ci": "jest --config config/jest.config.cjs --silent --ci --maxWorkers=1 --coverage --coverageReporters=lcovonly",
    "coveralls": "coveralls < coverage/lcov.info",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:ci": "lerna run --stream --concurrency 2 --scope \"@cardsgame/!(example)*\" build",
    "build": "./scripts/build.sh",
    "prepare": "npm run bootstrap && husky install",
    "prerelease:ci": "lerna version --yes",
    "release:ci": "lerna publish from-git --no-verify-access",
    "postrelease:ci": "git rebase main development && git push origin development --no-verify && git checkout main"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "git-cz": "^4.7.6",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "lerna": "^5.2.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.9",
    "prettier": "^2.7.1",
    "rollup": "^2.67.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "turbo": "^1.6.1",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}

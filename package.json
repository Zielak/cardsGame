{
  "name": "cardsgame",
  "private": true,
  "main": "index.js",
  "author": "Darek Greenly (https://darekgreenly.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zielak/cardsGame.git"
  },
  "bugs": {
    "url": "https://github.com/zielak/cardsGame/issues"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changed": "lerna changed --all --toposort",
    "changed:ci": "lerna changed --json --all --toposort --loglevel=silent",
    "linkup": "scripts/linkup.sh",
    "linkup:colyseus": "scripts/linkupColyseus.sh",
    "test": "jest --config config/jest.config.js --silent --maxWorkers=50%",
    "test:ci": "jest --config config/jest.config.js --silent --ci --maxWorkers=1",
    "test:ci_coveralls": "jest --config config/jest.config.js  --silent --ci --maxWorkers=1 --coverage --coverageReporters=lcovonly && coveralls < coverage/lcov.info",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,html,scss,md}\"",
    "build": "lerna run build",
    "build:server": "lerna run --stream --concurrency 1 --scope '*/server' build",
    "build:server-w": "lerna run --stream --concurrency 1 --scope '*/server' build:watch",
    "build:client": "lerna run --stream --concurrency 1 --scope '*/client' build",
    "build:client-w": "lerna run --stream --concurrency 1 --scope '*/client' build:watch",
    "build:utils": "lerna run --stream --concurrency 1 --scope '*/utils' build",
    "build:utils-w": "lerna run --stream --concurrency 1 --scope '*/utils' build:watch",
    "build:entityTraits": "lerna run --stream --concurrency 1 --scope '*/entity-traits' build",
    "ci:version": "lerna version --conventional-commits --yes",
    "ci:publish": "lerna publish from-git --yes",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chalk": "^4.1.1",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "git-cz": "^4.7.6",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}

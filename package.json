{
  "name": "cardsgame",
  "private": true,
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "echo nope",
    "test": "jest --silent",
    "test:backup": "jest -c=packages/server/jest.config.js",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,html,scss,md}\"",
    "build:server": "lerna run --stream --concurrency 1 --scope '*/server' build",
    "build:server-w": "lerna run --stream --concurrency 1 --scope '*/server' build:watch",
    "build:client": "lerna run --stream --concurrency 1 --scope '*/client' build:dev",
    "build:client-w": "lerna run --stream --concurrency 1 --scope '*/client' build:watch",
    "build:examples": "lerna run --stream --concurrency 1 --scope '*/examples' build",
    "build:utils": "lerna run --stream --concurrency 1 --scope '*/utils' build",
    "build:examples:client": "lerna run --stream --concurrency 1 --scope '*/examples' build:client",
    "build:examples:client-w": "lerna run --stream --concurrency 1 --scope '*/examples' build:client -- --watch",
    "build:examples:server": "lerna run --stream --concurrency 1 --scope '*/examples' build:server",
    "build:examples:server-w": "lerna run --stream --concurrency 1 --scope '*/examples' build:server-w",
    "examples:client": "lerna run --stream --concurrency 1 --scope '*/examples' client",
    "examples:server": "lerna run --stream --concurrency 1 --scope '*/examples' server",
    "preversion": "npm ci && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,html,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@colyseus/schema": "^0.4.36",
    "@types/bezier-js": "0.0.8",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.21",
    "@types/react-dom": "^16.8.3",
    "bezier-js": "^2.4.0",
    "chalk": "^2.4.2",
    "colyseus": "^0.10.7",
    "colyseus.js": "git+ssh://git@github.com/colyseus/colyseus.js.git",
    "css-loader": "^3.0.0",
    "eventemitter3": "^4.0.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-clean-dist": "0.0.6",
    "prettier": "^1.18.2",
    "sass": "^1.21.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-bundle-analyzer": "^3.2.0",
    "webpack-cli": "^3.3.4",
    "webpack-plugin-typescript-declaration-bundler": "^1.0.4"
  }
}

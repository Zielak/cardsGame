{
  "compilerOptions": {
    "outDir": "../dist",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "types": ["@cardsgame/types", "@cardsgame/example-types"]
  }
}

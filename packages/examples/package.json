  "main": "index.js",
  "files": [
    "dist",
    "public",
    "server"
  ],
  "scripts": {
    "start": "echo 'http://localhost:1234' && webpack-dev-server | npm run server",
    "client": "webpack-dev-server",
    "server": "npm run build:server && nodemon dist/server/index.js --delay 250ms --watch server --watch ../server/lib/",
    "server:ts": "nodemon --delay 250ms --watch server --watch ../server/src/ -x ts-node --project server/tsconfig.json --files server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack",
    "build:server": "tsc -b server",
    "build:server-w": "tsc -b server --watch"
  },
  "dependencies": {
    "@cardsgame/client": "file:../client",
    "@cardsgame/server": "file:../server",
    "@cardsgame/types": "file:../types",
    "@cardsgame/utils": "file:../utils",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "css-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1"
  }
}

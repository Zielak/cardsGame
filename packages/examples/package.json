{
  "name": "@cardsgame/examples",
  "version": "0.1.2-alpha.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "files": [
    "dist",
    "public",
    "server"
  ],
  "scripts": {
    "start": "echo 'http://localhost:1234' && npm run client | npm run server",
    "client": "parcel client/index.html --out-dir dist/client",
    "server": "npm run build:server && nodemon dist/server/index.js --watch server",
    "server:ts": "nodemon -x ts-node --project server/tsconfig.json --files server/index.ts --watch server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "rm -rf dist/client/* && parcel build client/index.html --out-dir dist/client",
    "build:server": "tsc -b server"
  },
  "dependencies": {
    "@cardsgame/client": "file:../client",
    "@cardsgame/server": "file:../server",
    "@cardsgame/types": "file:../types",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "devDependencies": {
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "nodemon": "^1.18.10",
    "parcel-bundler": "^1.11.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  }
}

{
  "name": "@cardsgame/examples",
  "version": "0.1.4",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "files": [
    "dist",
    "public",
    "server"
  ],
  "scripts": {
    "start": "echo 'http://localhost:1234' && npm run client | npm run server",
    "client": "parcel client/index.html --out-dir dist/client",
    "server": "npm run build:server && nodemon dist/server/index.js --delay 250ms --watch server --watch ../server/lib/",
    "server:ts": "nodemon --delay 250ms --watch server --watch ../server/src/ -x ts-node --project server/tsconfig.json --files server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "parcel build client/index.html --detailed-report --out-dir dist/client",
    "build:client:dev": "parcel build client/index.html --detailed-report --no-minify --out-dir dist/client",
    "build:server": "tsc -b server"
  },
  "dependencies": {
    "@cardsgame/client": "file:../client",
    "@cardsgame/server": "file:../server",
    "@cardsgame/types": "file:../types",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}

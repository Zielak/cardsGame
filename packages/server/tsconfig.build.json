{
  "extends": "@cardsgame/base-configs/tsconfig.json",
  "exclude": ["lib", "testSetup.ts", "**/*.test.*", "**/__*__/**/*"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "declarationDir": "./lib/types/",
    "outDir": "./lib/esm/",
    "baseUrl": "./src",
    "paths": {
      "@/actions/*": ["actions/*"],
      "@/annotations/*": ["annotations/*"],
      "@/bots/*": ["bots/*"],
      "@/commands/*": ["commands/*"],
      "@/conditions/*": ["conditions/*"],
      "@/entities/*": ["entities/*"],
      "@/interaction/*": ["interaction/*"],
      "@/messages/*": ["messages/*"],
      "@/player/*": ["player/*"],
      "@/queries/*": ["queries/*"],
      "@/room/*": ["room/*"],
      "@/state/*": ["state/*"],
      "@/traits/*": ["traits/*"],
      "@/utils/*": ["utils/*"]
    }
  }
}

{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "target": "ES2020",
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    /* strictness */
    "strictBindCallApply": true,
    "strictFunctionTypes": true
    // "strictNullChecks": true,
  }
}

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TSC Validate",
      "command": "tsc",
      "type": "shell",
      "args": ["Validated, check output in 'Problems' panel."],
      "presentation": {
        "reveal": "never"
      },
      "dependsOn": ["Validate Server", "Validate Client", "Validate Utils"],
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Validate Server",
      "command": "tsc",
      "type": "shell",
      "args": ["--noEmit", "-p", "packages/server/src"],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Validate Client",
      "command": "tsc",
      "type": "shell",
      "args": ["--noEmit", "-p", "packages/client/src"],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Validate Utils",
      "command": "tsc",
      "type": "shell",
      "args": ["--noEmit", "-p", "packages/utils/src"],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Validate Examples",
      "command": "tsc",
      "type": "shell",
      "args": ["--noEmit", "--jsx", "react", "-p", "packages/examples/server"],
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": "$tsc"
    }
  ]
}
